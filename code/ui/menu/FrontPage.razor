@using System
@using Sandbox;
@using Sandbox.MenuSystem;
@using Sandbox.UI;
@namespace Facepunch.Pool.Menu
@attribute [StyleSheet]

<root style="flex-direction: column;">

    <div class="game-title">
        &#x1F3B1; @Game.Menu.Package.Title
    </div>

    <div class="game-description">
        A classic pub game where your skill is determined by your blood-alcohol content. 
    </div>

    <div class="controls">

        @if ( Game.InGame )
        {
            <a class="button" href="/active">Current Game</a>
            <a class="button" onclick=@LeaveGame>Leave Game</a>
        }
        else
        {
            <a class="button" href="/find">Find Game</a>
            <a class="button" @onclick=@Game.Menu.Close>Quit</a>
        }

    </div>

</root>

@code
{
    void LeaveGame()
    {
        Game.Menu.LeaveServer("Leaving");
    }
}
